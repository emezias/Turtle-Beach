<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@drawable/bg_alertview"  >

    <com.clickbrand.turtlebeach.ui.TrueTypeTextView
        android:id="@+id/pwdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="11dp"
        android:paddingLeft="34dp"
    	android:paddingRight="34dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/mmenu_dialogTitle"
        android:textColor="@color/alertTitle"
        android:textSize="30sp" />
    <com.clickbrand.turtlebeach.ui.TrueTypeTextView
        android:id="@+id/pwdLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdTitle"
        android:paddingLeft="34dp"
    	android:paddingRight="34dp"
        android:gravity="left"
        android:singleLine="false"
        android:text="@string/mmenu_dialog"
        android:textColor="@color/alertLabel"
        android:textSize="21sp" />
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdLabel"
        android:layout_marginTop="23dip"       
        android:src="@drawable/img_title_divider" />
    
    <com.clickbrand.turtlebeach.ui.PwdEditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdLabel"
        android:layout_marginTop="41dip"
        android:layout_marginLeft="24dp"
    	android:layout_marginRight="24dp"
    	android:paddingLeft="8dp"
    	android:inputType="numberPassword"
        android:gravity="left"
        android:textSize="39sp"
        android:textColor="@android:color/white"
        android:background="@drawable/img_text_entry_field" />
    <LinearLayout android:id="@+id/pwdRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="26dp">
        <Button android:id="@+id/pwd1"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="1" />
        <Button android:id="@+id/pwd2"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="2" />
        <Button android:id="@+id/pwd3"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="3" />
    </LinearLayout>
    
    <LinearLayout android:id="@+id/pwdRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdRow1"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp">
        <Button android:id="@+id/pwd4"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="4" />
        <Button android:id="@+id/pwd5"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="5" />
        <Button android:id="@+id/pwd6"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="6" />
    </LinearLayout>
    
    <LinearLayout android:id="@+id/pwdRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdRow2"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp" >
        <Button android:id="@+id/pwd7"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="7" />
        <Button android:id="@+id/pwd8"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="8" />
        <Button android:id="@+id/pwd9"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="9" />
    </LinearLayout>
    
    <LinearLayout android:id="@+id/pwdRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdRow3"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp" >
        <View 
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1" />
        <Button android:id="@+id/pwd0"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="66dp"
	        android:text="0" />
        <ImageButton android:id="@+id/pwdback"
            android:layout_width="0dip"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:paddingTop="24dp"
	        android:paddingBottom="24dp"
	        android:onClick="pwdNumButton"
	        android:background="@drawable/pwd_btn"
	        android:scaleType="center"
	        android:src="@drawable/img_num_backspace" />
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
	    android:layout_marginBottom="12dp"
        android:layout_marginTop="-96dp"
        android:layout_below="@id/pwdRow4">
        <ImageView android:id="@+id/pwdPadDivider"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
        
        <LinearLayout android:id="@+id/pwdRow5"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="21dp"
	        android:layout_marginRight="21dp" >
	        
	        <Button android:id="@+id/pwdCancel"
	            android:layout_width="0dip"
		        android:layout_height="match_parent" 
		        android:layout_weight="1"
		        android:onClick="pwdNumButton"
		        android:background="@drawable/pwd_btn"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="25sp"
		        android:text="@string/cancel" />
	        <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="12dp"
		        android:src="@drawable/img_button_divider" />
	        <Button android:id="@+id/pwdOkay"
	            android:layout_width="0dip"
		        android:layout_height="match_parent" 
		        android:layout_weight="1"
		        android:textColor="@android:color/white"
		        android:textSize="25sp"
		        android:onClick="pwdNumButton"
		        android:background="@drawable/pwd_btn"
		        android:text="OK" />
    </LinearLayout>
    </RelativeLayout>
        

    

</RelativeLayout>