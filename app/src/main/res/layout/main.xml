<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen" >

    <com.turtlebeach.gstop.headsets.ui.TrueTypeTextView
        android:id="@+id/menuVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="v 1.0"
        android:gravity="center"/>

    <com.turtlebeach.gstop.headsets.ui.TrueTypeButton
        android:id="@+id/menuWhy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/black_btn"
        android:clickable="true"
        android:onClick="mMenu"
        android:text="@string/mmenu_why"
        android:padding="20dp"
        android:textColor="@color/blackBtnText"
        android:textSize="20sp" />

    <com.turtlebeach.gstop.headsets.ui.TrueTypeButton
        android:id="@+id/menuCatalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/menuWhy"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/black_btn"
        android:clickable="true"
        android:onClick="mMenu"
        android:text="@string/mmenu_catalog"
        android:padding="20dp"
        android:textColor="@color/blackBtnText"
        android:textSize="20sp" />

    <com.turtlebeach.gstop.headsets.ui.TrueTypeButton
        android:id="@+id/menuGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/menuWhy"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/black_btn"
        android:clickable="true"
        android:onClick="mMenu"
        android:text="@string/mmenu_trailer"
        android:padding="20dp"
        android:textColor="@color/blackBtnText"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/menuWhy" >
        <include android:id="@+id/menuHS1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/main_headsets" />

        <include android:id="@+id/menuHS2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/main_headsets" />

        <include android:id="@+id/menuHS3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/main_headsets" />

        <include android:id="@+id/menuHS4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/main_headsets" />
    </LinearLayout>

</RelativeLayout>