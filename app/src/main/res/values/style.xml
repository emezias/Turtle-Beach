<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Animation.MainAnimation" parent="android:style/Animation.Activity">
        <!--When opening a new activity, this is the animation that is run on the next activity-->
        <item name="android:activityOpenEnterAnimation">@null</item>
        <!--When opening a new activity, this is the animation that is run on the previous activity (which is exiting the screen)-->
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="Theme.Dialog"  parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.Transparent"  parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.VideoPlayback" parent="Theme.Transparent">
        <item name="android:windowAnimationStyle">@style/Animation.MainAnimation</item>
    </style>
    
    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_alertview</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- widgets -->
    <style name="MenuButton">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/menuButtons</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">375dp</item>
        <item name="android:background">@drawable/brown_btn</item>
        <item name="android:clickable">true</item>
    </style>
</resources>